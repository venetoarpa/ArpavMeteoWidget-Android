<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:clickable="true"
    	android:background="@drawable/list_selector">
    	
        <LinearLayout 
            android:layout_width="100dp"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		android:padding="1dp"
    		android:layout_gravity="center">

            <TextView
                android:id="@+id/city_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#33B5E5"
                android:maxLines="2"
                android:paddingLeft="3dp"
                android:paddingBottom="0dp" />

            <ImageView
                android:id="@+id/sky_img"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:layout_margin="7dp"
                android:gravity="bottom"/>
            
        </LinearLayout>
        
         <LinearLayout 
            android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation="vertical"
    		android:gravity="center_vertical|right">
        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:orientation="horizontal"
	    		android:gravity="right"
	    		android:paddingRight="3dp"
	    		android:paddingTop="1dp">
				<TextView
	                android:id="@+id/arpa"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#00CC99"
	                android:textAlignment="viewEnd"
	                android:maxLines="1"
	                android:textSize="10sp"
	                android:layout_gravity="left"
	                android:paddingRight="3dp"
	                android:text="@string/arpa"/>    
	                <ImageView
	                    android:id="@+id/refresh"
	                    android:layout_width="16dp"
	                    android:layout_height="16dp"
	                    android:layout_gravity="right"
	                    android:src="@drawable/refreshw"
	                    android:scaleType="centerInside" 
	                    android:background="@drawable/list_selector"
	                    android:clickable="true"/>
			</LinearLayout>
        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:orientation="vertical"
	    		android:gravity="center"
	    		android:layout_marginTop="-2dp">
	            <TextView
	                android:id="@+id/sky_description"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#FFFFFF"
	                android:textAlignment="center"
	                android:maxLines="2"
	                android:textSize="11sp"
	                android:layout_gravity="center"
	                android:text="@string/err_loc"
	                android:layout_marginTop="-2dp"/>
	            <TextView
	                android:id="@+id/temp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
					android:textSize="11sp"
	                android:textColor="#33B5E5"
	                android:textAlignment="center"
					android:layout_gravity="center"	                
					android:layout_marginTop="-2dp"/>
	            <TextView
	                android:id="@+id/rain_description"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
					android:textSize="11sp"
	                android:textColor="#FFFFFF"
	                android:textAlignment="center"
	                android:maxLines="2" 
	                android:layout_gravity="center"
	                android:text="@string/err_add_loc"
	                android:layout_marginTop="-2dp" />            
	        </LinearLayout>
	        
        </LinearLayout>
    </LinearLayout>